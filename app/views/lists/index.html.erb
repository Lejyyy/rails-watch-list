<div class="container py-5">
  <div class="text-center mb-5">
    <h1 class="display-4 fw-bold mb-3">
      <i class="fas fa-clapperboard text-neon me-2"></i>My Watch Lists
    </h1>
    <p class="lead text-muted">Discover and organize your favorite movies</p>
  </div>

  <% if @lists.empty? %>
    <div class="empty-state animate-in">
      <div class="mb-4">
        <i class="fas fa-film"></i>
      </div>
      <h3 class="text-white mb-2">No lists yet</h3>
      <p class="text-muted mb-4">Create your first watch list to get started</p>
      <%= link_to new_list_path, class: "btn btn-neon btn-lg rounded-pill px-4 fw-bold" do %>
        <i class="fas fa-plus me-2"></i>Create Your First List
      <% end %>
    </div>
  <% else %>
    <div class="row g-4">
      <% @lists.each_with_index do |list, index| %>
        <div class="col-12 col-md-6 col-lg-4 animate-in" style="animation-delay: <%= index * 0.1 %>s">
          <div class="card h-100">
            <div class="header-gradient">
              <h5 class="card-title mb-0 fw-bold text-dark">
                <i class="fas fa-list me-2"></i><%= list.name %>
              </h5>
            </div>
            <div class="card-body d-flex flex-column">
              <div class="mb-3">
                <span class="badge-neon">
                  <i class="fas fa-film me-1"></i><%= list.bookmarks.count %> movies
                </span>
              </div>
              <p class="card-text text-muted flex-grow-1">
                <% if list.bookmarks.any? %>
                  Last added: <span class="text-white"><%= list.bookmarks.last.movie.title %></span>
                <% else %>
                  No movies in this list yet
                <% end %>
              </p>
              <div class="d-grid gap-2">
                <%= link_to list_path(list), class: "btn btn-outline-neon rounded-pill fw-semibold" do %>
                  <i class="fas fa-eye me-1"></i>View List
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="text-center mt-5">
    <%= link_to new_list_path, class: "btn btn-neon btn-lg rounded-pill shadow-lg px-5 fw-bold" do %>
      <i class="fas fa-plus me-2"></i>Create New List
    <% end %>
  </div>
</div>

