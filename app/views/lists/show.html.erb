<div class="container py-5">
  <div class="mb-4">
    <%= link_to lists_path, class: "btn btn-outline-neon rounded-pill fw-semibold" do %>
      <i class="fas fa-arrow-left me-1"></i>Back to Lists
    <% end %>
  </div>

  <div class="text-center mb-5">
    <h1 class="display-4 fw-bold mb-3">
      <i class="fas fa-list-ul text-neon me-2"></i><%= @list.name %>
    </h1>
    <p class="lead text-muted">
      <span class="badge-neon">
        <i class="fas fa-film me-1"></i><%= @list.bookmarks.count %> movies
      </span>
    </p>
  </div>

  <% if @list.bookmarks.empty? %>
    <div class="empty-state animate-in">
      <div class="mb-4">
        <i class="fas fa-popcorn"></i>
      </div>
      <h3 class="text-white mb-2">No movies yet</h3>
      <p class="text-muted mb-4">Add your first movie to this list</p>
      <%= link_to new_list_bookmark_path(@list), class: "btn btn-neon btn-lg rounded-pill px-4 fw-bold" do %>
        <i class="fas fa-plus me-2"></i>Add Movie
      <% end %>
    </div>
  <% else %>
    <div class="row g-4">
      <% @list.bookmarks.each_with_index do |bookmark, index| %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 animate-in" style="animation-delay: <%= index * 0.1 %>s">
          <div class="card h-100 movie-card">
            <div class="position-relative overflow-hidden" style="border-radius: 1rem 1rem 0 0;">
              <% if bookmark.movie.poster_url.present? %>
                <img src="<%= bookmark.movie.poster_url %>"
                     class="card-img-top"
                     alt="<%= bookmark.movie.title %>"
                     style="height: 350px; object-fit: cover;">
              <% else %>
                <div class="d-flex align-items-center justify-content-center" style="height: 350px; background: linear-gradient(135deg, #1a1a1a, #2d2d2d);">
                  <i class="fas fa-film fa-3x text-neon" style="opacity: 0.5;"></i>
                </div>
              <% end %>
              <div class="movie-overlay position-absolute bottom-0 start-0 end-0 p-3">
                <h6 class="mb-0 text-white fw-bold">
                  <i class="fas fa-star text-neon me-1"></i><%= bookmark.movie.title %>
                </h6>
              </div>
            </div>
            <div class="card-body">
              <p class="card-text text-muted small mb-3 overview-truncate">
                <%= bookmark.movie.overview.presence || "No overview available" %>
              </p>
              <% if bookmark.comment.present? %>
                <div class="alert alert-warning py-2 px-3 mb-0">
                  <i class="fas fa-comment-alt me-1"></i>
                  <small><%= bookmark.comment %></small>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="text-center mt-5">
    <%= link_to new_list_bookmark_path(@list), class: "btn btn-neon btn-lg rounded-pill shadow-lg px-5 fw-bold" do %>
      <i class="fas fa-plus me-2"></i>Add Another Movie
    <% end %>
  </div>
</div>

<style>
  /* Movie card specific styles */
  .movie-card {
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .movie-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4), 0 0 30px rgba(231, 242, 0, 0.15);
  }

  .movie-card .card-img-top {
    transition: transform 0.4s ease;
  }

  .movie-card:hover .card-img-top {
    transform: scale(1.08);
  }

  /* Overlay gradient */
  .movie-overlay {
    background: linear-gradient(to top, rgba(0, 0, 0, 0.95), rgba(0, 0, 0, 0.4), transparent);
  }

  /* Fade-out overview */
  .overview-truncate {
    max-height: 60px;
    overflow: hidden;
    position: relative;
  }

  .overview-truncate::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 25px;
    background: linear-gradient(to bottom, transparent, rgba(26, 26, 26, 0.9));
  }

  /* Card hover effects */
  .movie-card:hover .movie-overlay {
    background: linear-gradient(to top, rgba(231, 242, 0, 0.15), rgba(0, 0, 0, 0.4), transparent);
  }
</style>

